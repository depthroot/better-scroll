.pullup-down
  height 100%
  .pullup-down-bswrapper
    position relative
    height 100%
    padding 0 10px
    border 1px solid #ccc
    overflow hidden
  .pullup-down-list
    padding 0
  .pullup-down-list-item
    padding 10px 0
    list-style none
    border-bottom 1px solid #ccc
  .pulldown-wrapper
    position absolute
    width 100%
    padding 20px
    box-sizing border-box
    transform translateY(-100%) translateZ(0)
    text-align center
    color #999
  .pullup-wrapper
    padding 20px
    text-align center
    color #999
